package laçosdescisão;

import java.util.Scanner;

public class Laçodescisao3 {

	public static void main(String[] args) {
		
		String nome;
		int idade;
		boolean primeiraDoacao ;
		
		Scanner leia = new Scanner(System.in);
		
		System.out.println("Digite seu nome: ");
		nome = leia.next();
		
		System.out.println("Digite sua idade ");
		idade = leia.nextInt();
		
		System.out.println("É sua primeira doação ? ");
		primeiraDoacao = leia.nextBoolean();
		
		if (idade >= 18 && idade <= 69) {
            if (idade >= 60 && primeiraDoacao) {
                System.out.println("\n" + nome + " não está apto para doar sangue!");
            } else {
                System.out.println("\n" + nome + " está apto para doar sangue!");
            }
        } else {
            System.out.println("\n" + nome + " não está apto para doar sangue!");
        }
    }

		
		
		
		
		
		
		
		
		
		
		

	}

}
